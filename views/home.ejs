 <%- include("./partials/header") %>

 <main class="container">

    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="display-6">Enter your details</h1>
            <form action="/checkin" method="POST" >
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" name="name" id="name" placeholder="Name">
                </div>

              
                <div class="mb-3">
                    <label for="mobile" class="form-label">Mobile No.</label>
                    <input class="form-control" type="number"  name="mobile" id="mobile" placeholder="Mobile No.">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <div class="input-group mb-3">
                     <input type="email" name="email" id="email" class="form-control" placeholder="email"  aria-describedby="basic-addon1">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="address" class="form-label">Address</label>
                    <textarea class="form-control" name="address" id="address"rows="3" placeholder="Address"></textarea>
                </div>
                <button type="submit" class="btn btn-success btn-small">Checkin</button>
            </form>
        </div>
    </div>
</main>


 <%- include("./partials/footer") %>
